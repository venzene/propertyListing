<%- include('../partials/header', { isAuthenticated: isAuthenticated }) %>

<div class="container mt-5">
  <h1 class="mb-4 text-center">Browse Properties</h1>

  <div class="row">
    <% properties.forEach(function(property) { %>
      <% if (property) { %>
        <div class="col-md-4 mb-4">
          <%- include('../partials/propertyCard', { property: property }) %>
        </div>
      <% } %>
    <% }) %>
  </div>

  <!-- âœ… Pagination controls -->
  <div class="d-flex justify-content-center mt-4">
    <nav>
      <ul class="pagination">
        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="/browse/?page=<%= currentPage - 1 %>">Previous</a>
          </li>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="/browse/?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="/browse/?page=<%= currentPage + 1 %>">Next</a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
</div>

<%- include('../partials/footer') %>
